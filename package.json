{
  "name": "next-shadcn-biome-bun-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint lint:root",
    "fix": "turbo run fix fix:root",
    "lint:root": "bun x ultracite@latest check",
    "fix:root": "bun x ultracite@latest fix",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "ultracite": "catalog:",
    "lefthook": "^2.0.4",
    "turbo": "^2.6.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.2",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "@types/react": "19.2.0",
      "@types/react-dom": "19.2.0",
      "lucide-react": "latest",
      "tailwindcss": "4.1.17",
      "@tailwindcss/postcss": "4.1.17",
      "postcss": "latest",
      "@biomejs/biome": "2.3.6",
      "ultracite": "6.3.4",
      "typescript": "5.9.2"
    }
  }
}
