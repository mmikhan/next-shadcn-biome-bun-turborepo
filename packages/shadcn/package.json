{
  "name": "@repo/shadcn",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./dist/*.js"
  },
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/index.css",
    "build:components": "tsc && tsc-alias",
    "check-types": "tsc && tsc-alias --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/index.css --watch",
    "dev:components": "tsc && tsc-alias --watch",
    "lint": "bun x ultracite@latest check",
    "fix": "bun x ultracite@latest fix"
  },
  "peerDependencies": {
    "react": "catalog:"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "catalog:",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "4.1.17",
    "@types/react": "catalog:",
    "tsc-alias": "^1.8.16",
    "typescript": "catalog:",
    "ultracite": "catalog:"
  }
}
